@model IEnumerable<MedidumDto>
<table class="table table-striped table-responsive-md table-bordered smfont" id="tbdata" style="width:100%">
    <colgroup>
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Escala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "Medidum", new { id = 0 }, Context.Request.Scheme)' , 'Nueva Medida')" class="btn btn-sm btn-secondary text-white"><i class="bi bi-plus-square-fill"></i> Medida </a>
                @*<a onclick="showInPopup('@Url.Action("AddOrEdit", "Medidum", new { id = 0 }, Context.Request.Scheme)' , 'Nueva Concepto')" class="btn btn-sm btn-secondary text-white"><i class="bi bi-plus-square-fill"></i> Concepto </a>*@
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Escala)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit", "Medidum", new { id = item.MedidaId }, Context.Request.Scheme)' , 'Actualizar Medida')" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil-square"></i> </a>
                    <button data-id="@item.MedidaId" class="btn btn-sm btn-outline-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="bi bi-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
