@model IEnumerable<ProductoDto>
<table class="table table-striped table-responsive-md table-bordered smfont" id="BodegasTable" style="width:100%">
    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartamentoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IVAId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PathImagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuidImagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedidaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pieza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "Products", new { id = 0 }, Context.Request.Scheme)' , 'Nuevo producto')" 
                class="btn btn-sm btn-secondary text-white"><i class="bi bi-plus-square-fill"></i> producto </a>
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
           <td>
               @Html.DisplayFor(modelItem => item.Nombre)
           </td>
           <td>
               @Html.DisplayFor(modelItem => item.Descripcion)
           </td>
           <td>
               @Html.DisplayFor(modelItem => item.DepartamentoId)
           </td>
           <td>
               @Html.DisplayFor(modelItem => item.IVAId)
           </td>
           <td>
               @Html.DisplayFor(modelItem => item.Precio)
           </td>
           <td>
               @Html.DisplayFor(modelItem => item.Notas)
           </td>
           <td>
               @Html.DisplayFor(modelItem => item.Imagen)
           </td>
           <td>
               @Html.DisplayFor(modelItem => item.PathImagen)
           </td>
           <td>
               @Html.DisplayFor(modelItem => item.GuidImagen)
           </td>
           <td>
              @Html.DisplayFor(modelItem => item.MedidaId)
           </td>
           <td>
              @Html.DisplayFor(modelItem => item.Medida)
           </td>
           <td>
              @Html.DisplayFor(modelItem => item.Pieza)
           </td>
           <td>
              @Html.DisplayFor(modelItem => item.IsActive)
           </td>
           <td>
              @Html.DisplayFor(modelItem => item.RegistrationDate)
           </td>
           <td>
               <a onclick="showInPopup('@Url.Action("AddOrEdit", "Products", new { id = item.IdProducto }, Context.Request.Scheme)' , 'Actualizar Categoría')" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil-square"></i> </a>
               <button data-id="@item.IdProducto" class="btn btn-sm btn-outline-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="bi bi-trash"></i></button>
           </td>
        </tr>
    }
    </tbody>
</table>
